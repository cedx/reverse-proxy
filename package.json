{
  "description": "Simple reverse proxy server supporting WebSockets.",
  "homepage": "https://github.com/cedx/reverse-proxy",
  "name": "@cedx/reverse-proxy",

  "author": "CÃ©dric Belin <cedric@belin.io>",
  "bugs": "https://github.com/cedx/reverse-proxy/issues",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "preferGlobal": true,
  "repository": "cedx/reverse-proxy",
  "version": "1.0.0",

  "bin": {
    "reverse-proxy": "./bin/cli"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "forever": "^0.15.2",
    "http-proxy": "^1.14.0",
    "js-yaml": "^3.6.1"
  },
  "devDependencies": {
    "@cedx/gulp-david": "^2.0.4",
    "codacy-coverage": "^2.0.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-istanbul": "^1.1.1",
    "gulp-jshint": "^2.0.1",
    "gulp-load-plugins": "^1.2.4",
    "gulp-mocha": "^3.0.1",
    "gulp-zip": "^3.2.0",
    "jsdoc": "^3.4.0",
    "jshint": "^2.9.3"
  },
  "engines": {
    "node": ">=6.5.0"
  },
  "jshintConfig": {
    "esversion": 6,
    "freeze": true,
    "futurehostile": true,
    "latedef": "nofunc",
    "mocha": true,
    "noarg": true,
    "nocomma": true,
    "node": true,
    "nonbsp": true,
    "nonew": true,
    "singleGroups": true,
    "trailing": true,
    "typed": true,
    "undef": true,
    "unused": true,
    "varstmt": true
  },
  "keywords": [
    "http",
    "reverse",
    "routing",
    "proxy",
    "server",
    "websocket"
  ],
  "scripts": {
    "check": "david",
    "coverage": "codacy-coverage < var/lcov.info",
    "doc": "jsdoc --configure doc/jsdoc.json",
    "lint": "gulp lint",
    "start": "forever start -c node -e var/stderr.log -o var/stdout.log -l reverse-proxy.log --append --minUptime 30000 --spinSleepTime 30000 --uid reverse-proxy bin/cli.js",
    "stop": "forever stop reverse-proxy",
    "test": "gulp test"
  }
}
