{
  "description": "Simple reverse proxy server supporting WebSockets.",
  "homepage": "https://github.com/cedx/reverse-proxy.js",
  "name": "reverse-proxy-js",

  "author": "CÃ©dric Belin <cedric@belin.io>",
  "bugs": "https://github.com/cedx/reverse-proxy.js/issues",
  "license": "Apache-2.0",
  "main": "./lib/index",
  "preferGlobal": true,
  "repository": "cedx/reverse-proxy.js",
  "version": "0.5.2",

  "bin": {
    "reverse-proxy": "./bin/cli.js"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "forever": "^0.15.1",
    "http-proxy": "^1.13.2",
    "js-yaml": "^3.5.5"
  },
  "devDependencies": {
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-david": "^0.4.1",
    "gulp-istanbul": "^0.10.3",
    "gulp-jshint": "^2.0.0",
    "gulp-load-plugins": "^1.2.0",
    "gulp-mocha": "^2.2.0",
    "gulp-zip": "^3.2.0",
    "jsdoc": "^3.4.0",
    "jshint": "^2.9.1",
    "mocha-sonar-reporter": "^0.1.4"
  },
  "engines": {
    "node": ">=4.4.0"
  },
  "jshintConfig": {
    "esnext": true,
    "freeze": true,
    "futurehostile": true,
    "latedef": "nofunc",
    "loopfunc": true,
    "mocha": true,
    "nocomma": true,
    "node": true,
    "nonbsp": true,
    "nonew": true,
    "strict": true,
    "undef": true,
    "unused": true,
    "varstmt": true
  },
  "keywords": [
    "http",
    "reverse",
    "routing",
    "proxy",
    "server",
    "websocket"
  ],
  "scripts": {
    "start": "forever start -c node -e var/stderr.log -o var/stdout.log -l var/forever.log --append --minUptime 30000 --spinSleepTime 30000 --uid reverse-proxy bin/cli.js",
    "stop": "forever stop reverse-proxy",
    "test": "gulp test"
  }
}
