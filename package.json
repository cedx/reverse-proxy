    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-istanbul": "^1.1.1",
    "gulp-eslint": "^3.0.1",
    "gulp-load-plugins": "^1.4.0",
    "gulp-mocha": "^3.0.1",
    "gulp-zip": "^3.2.0"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "keywords": [
    "http",
    "observable",
    "proxy",
    "reverse",
    "routing",
    "rxjs",
    "server",
    "websocket"
  ],
  "scripts": {
    "coverage": "codacy-coverage < var/lcov.info",
    "prepublish": "gulp build",
    "restart": "npm stop && gulp clean && npm start",
    "start": "forever start -c node -e var/stderr.log -o var/stdout.log -l reverse-proxy.log --append --minUptime 30000 --spinSleepTime 30000 --uid reverse-proxy bin/cli.js",
